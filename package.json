{
  "name": "@mtt-stack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run api\" \"bun run client\"",
    "api": "bun run --cwd apps/api dev",
    "client": "bun run --cwd apps/client dev",
    "client:build": "bun run --cwd apps/client build",
    "clean": "rm -rf bun.lockb && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.11.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13",
    "typescript-eslint": "^8.8.1",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
